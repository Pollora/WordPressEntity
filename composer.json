{
    "name": "pollora/entity",
    "description": "A modern, fluent and type-safe API for registering WordPress post types and taxonomies",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "wordpress",
        "post-type",
        "taxonomy",
        "custom-post-type"
    ],
    "authors": [
        {
            "name": "Pollora",
            "email": "contact@pollora.com"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "pestphp/pest": "^2.15",
        "pestphp/pest-plugin-mock": "^2.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10",
        "laravel/pint": "^1.13"
    },
    "autoload": {
        "psr-4": {
            "Pollora\\Entity\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pollora\\Entity\\Tests\\": "tests/"
        },
        "files": [
            "tests/bootstrap.php"
        ]
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test:coverage": "vendor/bin/pest --coverage",
        "lint": "vendor/bin/pint",
        "phpstan": "vendor/bin/phpstan analyse"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
